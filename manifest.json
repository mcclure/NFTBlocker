{
  "manifest_version": 2,

  "name": "Twitter Block Chain",
  "description": "Blocks all users on a following/followers page.",
  "version": "1.4",
  "icons": { 
  "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png" 
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://twitter.com/"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.twitter.com/*","https://twitter.com/*"],
      "css": ["css/content.css"],
      "js": ["js/Queue.js","bower_components/jquery/dist/jquery.min.js","js/blockchain.js"]
    }
  ]
}