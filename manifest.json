{
  "manifest_version": 2,

  "name": "Twitter Block Chain",
  "description": "Blocks all users on a following/followers page.",
  "version": "1.4",
  "icons": { 
	"16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "browser_action": {
    "default_icon": "block_chain_icon_trans2.png",
    "default_popup": "popup.html"
  },
  "permissions": [
	"storage",
    "activeTab",
    "https://twitter.com/"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.twitter.com/*","https://twitter.com/*"],
      "css": ["content.css"],
      "js": ["Queue.js","jquery-1.11.2.min.js","blockchain.js"]
    }
  ]
}